package edunova;

import javax.swing.JOptionPane;

public class Ciklicka01 {

	public static void main(String[] args) {
		int redak,stupac;
		
		do {
			redak=Integer.parseInt(JOptionPane.showInputDialog("Broj redova:"));
			stupac=Integer.parseInt(JOptionPane.showInputDialog("Broj stupaca:"));
				
		}while((redak==0 | redak<0) | (stupac==0 | stupac<0));
		
		
		final int[][] matrica = new int[redak][stupac];
        int broj = 1;
        int red1 = 0;
        int stup1 = 0;
        int red2 = redak - 1;
        int stup2 = stupac - 1;
        int i = 0;
        int j = 0;
        while(broj <= redak * stupac){
            for(i = red1; i <= stup2; i++)
            	matrica[red1][i] = broj++;
            for(i = red1 + 1; i <= red2; i++)
            	matrica[i][stup2] = broj++;
            for(i = stup2 - 1; i >= stup1; i--)
            	matrica[red2][i] = broj++;
            for(i = red2 - 1; i >= red1 + 1; i--)
            	matrica[i][stup1] = broj++;
            stup1++;
            stup2--;
            red1++;
            red2--;
        }
        System.out.println("Generated Matrix:");
        for(i = 0; i < stupac; i++){
            for(j = 0; j < redak; j++)
                System.out.print(matrica[i][j] + "\t");
            System.out.println();
        }
    }
		
}
	
