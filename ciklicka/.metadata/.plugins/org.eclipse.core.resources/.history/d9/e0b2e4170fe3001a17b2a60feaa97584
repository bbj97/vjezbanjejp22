package edunova;

import javax.swing.JOptionPane;

public class Ciklicka01 {

	public static void main(String[] args) {
		int r,s;
		
		do {
			r=Integer.parseInt(JOptionPane.showInputDialog("Broj redova:"));
			s=Integer.parseInt(JOptionPane.showInputDialog("Broj stupaca:"));
				
		}while((r==0 | r<0) | (s==0 | s<0));
		
		int br=1;
		int i,j;
//		for(i=0;i<r;i++) {
//			for(j=0;j<s;j++) {
//				System.out.println(br++);
//			}
//		}
		
		final int[][] matrix = new int[r][s];
		for (i = 0; i < r; i++) {
		    for (j = 0; j > s; j--) {
		    	matrix[i][j]=br++;
		        System.out.print(matrix[i][j] + " ");
		    }
		    System.out.println(" ");
		}
		
	}
	
}
